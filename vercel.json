{
  "version": 2,
  "cleanUrls": true,
  "headers": [
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/js/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/(.*).css",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/js/core/(.*)", "destination": "/js/core/$1" },
    { "source": "/js/features/(.*)", "destination": "/js/features/$1" },
    { "source": "/js/systems/(.*)", "destination": "/js/systems/$1" },
    { "source": "/js/effects/(.*)", "destination": "/js/effects/$1" },
    { "source": "/js/utils/(.*)", "destination": "/js/utils/$1" },
    { "source": "/js/(.*)", "destination": "/js/$1" },
    { "source": "/css/(.*)", "destination": "/css/$1" },
    { "source": "/images/(.*)", "destination": "/images/$1" },
    { "source": "/data/(.*)", "destination": "/data/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
